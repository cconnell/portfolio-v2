<section id="text">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
      <% if current_user %>
        <%= link_to "Edit", edit_blog_post_path(@blog_post), class: "btn btn-default" %>
        <%= link_to "Delete", blog_post_path(@blog_post), method: :delete, data: { confirm: "Are you sure you want to remove this post?" }, class: "btn btn-default" %>
      <% end %>
        <h2 class="heading"><%= @blog_post.title %></h2>
        <div class="row">
          <div class="col-md-12 col-md-12-offset-2">
            <p><%= @blog_post.body %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>