<h1>edit</h1>

<div class="col-md-6">
  <%= form_for(@blog_post, method: :patch) do |f| %>
  <div>
    <%= f.label "title" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div>
    <%= f.label "body" %>
    <%= f.text_area :body, class: "form-control", rows: "4", id: "summer" %>
  </div>

  <%= f.hidden_field :date, value: Time.now %>
  
  <%= f.submit class: "btn btn-default" %>

  <% end %>
</div>